    "word_analysis": {
      "template": "# Librán Word Analysis\n\n## Context:\n{context}\n\n## Word: {word}\n\nAnalyze this word for {task_type}:\n- Morphological breakdown\n- Etymology and roots\n- Cultural context\n- Phonetic patterns\n- Quality assessment\n\nFormat as JSON with confidence scores.",
      "max_context_tokens": 4000
    },
    "word_generation": {
      "template": "# Librán Word Generation\n\n## Context:\n{context}\n\n## Generate: {english_word}\n## Category: {category}\n\nCreate a Librán word following:\n- Established patterns from context\n- Cultural authenticity\n- Phonetic harmony\n- Etymological coherence\n\nFormat as JSON with alternatives and reasoning.",
      "max_context_tokens": 5000
    },
    "translation": {
      "template": "# Librán Translation\n\n## Context:\n{context}\n\n## Translate: {text}\n## Direction: {direction}\n\nProvide accurate translation using:\n- Context vocabulary\n- Cultural nuances\n- Grammatical correctness\n- Idiomatic expressions\n\nFormat as JSON with confidence and alternatives.",
