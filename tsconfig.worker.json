{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist-workers",
    "rootDir": "./lib",
    "noEmit": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "jsx": "preserve",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true
  },
  "include": [
    "lib/workers/**/*",
    "lib/worker-utils.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-test",
    "dist-workers",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
