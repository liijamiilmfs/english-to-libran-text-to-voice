{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-workers",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "declaration": false,
    "sourceMap": false,
    "noEmit": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/workers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-test",
    "out",
    ".next"
  ]
}
