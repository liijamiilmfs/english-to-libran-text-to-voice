{
  "name": "libran-voice-forge",
  "version": "1.0.0",
  "description": "English to LibrÃ¡n text-to-speech translation and synthesis",
  "private": true,
  "scripts": {
    "dev": "npm run build:workers && next dev",
    "build": "npm run build:workers && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "build:workers": "tsc -p tsconfig.worker.json",
    "clean:test": "node -e \"require('fs').rmSync('dist-test', { recursive: true, force: true });\"",
    "build:test": "npm run clean:test && tsc -p tsconfig.test.json && tsc-alias -p tsconfig.test.json",
    "test:run": "node scripts/run-tests.js",
    "test": "npm run build:test && npm run test:run",
    "test:ci": "node scripts/test-ci.js",
    "test:vitest": "vitest --config vitest.config.mjs",
    "test:vitest:ui": "vitest --ui --config vitest.config.mjs",
    "test:vitest:run": "vitest run --config vitest.config.mjs",
    "test:coverage": "node scripts/coverage.js",
    "test:importer": "node scripts/run-vitest.js",
    "test:all": "node scripts/run-all-tests.js",
    "test:all:coverage": "node scripts/run-all-tests.js --coverage",
    "test:load": "node scripts/load-test-guardrails.js",
    "logs:view": "node scripts/view-logs.js",
    "logs:follow": "node scripts/view-logs.js --follow",
    "logs:api": "node scripts/view-logs.js --type=api --follow",
    "logs:error": "node scripts/view-logs.js --type=error --follow",
    "logs:translation": "node scripts/view-logs.js --type=translation --follow",
    "logs:tts": "node scripts/view-logs.js --type=tts --follow",
    "dict:build": "node scripts/dict-build.js",
    "dict:import": "node scripts/dict-import.js",
    "dict:import-libran": "node scripts/dict-import-libran.js",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:dry-run": "standard-version --dry-run",
    "prepare": "husky install"
  },
  "dependencies": {
    "lucide-react": "^0.544.0",
    "next": "^14.0.0",
    "openai": "^4.20.0",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.0.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.2.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "esbuild": "^0.25.10",
    "inflight": "npm:lru-cache@^10.0.0",
    "@humanwhocodes/config-array": "npm:@eslint/config-array@^0.18.0",
    "rimraf": "^5.0.0",
    "glob": "^10.0.0",
    "@humanwhocodes/object-schema": "npm:@eslint/object-schema@^0.18.0",
    "node-domexception": false
  }
}
